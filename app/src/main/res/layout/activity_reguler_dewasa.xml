<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RegulerDewasa">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD1717"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Mandarin App"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="METODE BELAJAR"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas Onsite memberikan pengalaman belajar langsung di ruang kelas bersama pengajar profesional."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@+id/tvTagline">

        <Button
            android:id="@+id/btnDewasaOnline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF5722"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="10dp"
            android:text="ONLINE"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_dewasa"
            app:iconGravity="top"
            app:iconSize="60dp" />

        <Button
            android:id="@+id/btnDewasaOnsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#4CAF50"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="10dp"
            android:text="ONSITE"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_anak"
            app:iconGravity="top"
            app:iconSize="60dp" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>