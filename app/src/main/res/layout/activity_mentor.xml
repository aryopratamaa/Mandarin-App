<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mentor">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD1717"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Mandarin App"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aryo"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/nameMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ARYO PRATAMA"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/descMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spesialis pengajaran bahasa Mandarin, berpengalaman 5 tahun."
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:id="@+id/socialRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="start">

<!--                            <ImageView-->
<!--                                android:id="@+id/ic_call"-->
<!--                                android:layout_width="35dp"-->
<!--                                android:layout_height="35dp"-->
<!--                                android:layout_marginEnd="12dp"-->
<!--                                android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                                android:scaleType="centerInside"-->
<!--                                android:src="@drawable/ic_call" />-->

                            <ImageView
                                android:id="@+id/ic_whatsappAryo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_wa" />

                            <ImageView
                                android:id="@+id/ic_instagramAryo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/ic_fbAryo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_fb" />

                            <ImageView
                                android:id="@+id/ic_youtubeAryo"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_youtube" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rahmi"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/nameMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SYAIDATURRAHMI"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/descMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spesialis pengajaran bahasa Mandarin, berpengalaman 15 tahun."
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:id="@+id/socialRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="start">

                            <ImageView
                                android:id="@+id/ic_whatsapp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_wa" />

                            <ImageView
                                android:id="@+id/ic_instagram"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/ic_fb"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_fb" />

                            <ImageView
                                android:id="@+id/ic_youtube"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_youtube" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
