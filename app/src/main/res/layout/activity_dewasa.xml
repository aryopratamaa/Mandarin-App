<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".dewasa">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Kelas Dewasa"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belajar Mandarin dengan fleksibel melalui Kelas Online atau Kelas Onsite sesuai kebutuhan Anda."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@+id/tvTagline">

        <Button
            android:id="@+id/btnOnline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF5722"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="10dp"
            android:text="ONLINE"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_daring"
            app:iconGravity="top"
            app:iconSize="60dp" />

        <Button
            android:id="@+id/btnOnsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#4CAF50"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="10dp"
            android:text="ONSITE"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_room"
            app:iconGravity="top"
            app:iconSize="60dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>